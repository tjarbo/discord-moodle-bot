{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*",
        "tests/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}